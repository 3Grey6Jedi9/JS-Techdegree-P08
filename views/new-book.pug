extends layout

block content
    h1 New Book

    form(action="/books/new" method="post" class="form")
        if (validationErrors && validationErrors.length > 0)
            div(class="error")
                h3 Ooops!
                ul
                    each error in validationErrors
                        li= error
        div(class="form-row")
            .label
                label(for="title") TITLE:
            .input
                input(type="text" name="title" placeholder="Title", id="title")
            .label
                label(for="author") AUTHOR:
            .input
                input(type="text" name="author" placeholder="Author", id="author")
            .label
                label(for="genre") GENRE:
            .input
                input(type="text" name="genre" placeholder="Genre", id="genre")
            .label
                label(for="year") YEAR:
            .input
                input(type="number" name="year" placeholder="Year", id="year")

        button(type="submit" class="nbtn") Create New Book
        a(href="/books", class="btn") Cancel




        script(src="/scripts/focus.js")






