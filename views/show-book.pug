extends layout

block content
    body

    form(action="/books/"+book.dataValues.id+"/update?_method=PUT", method="POST")
        h1 Book Detail

        ul
            li
                label Title:
                input(type="text", name="title", value=book.dataValues.title)
            li
                label Author:
                input(type="text", name="author", value=book.dataValues.author)
            li
                label Genre:
                input(type="text", name="genre", value=book.dataValues.genre)
            li
                label Year:
                input(type="number", name="year", value=book.dataValues.year)

        button(type="submit") Update Book
        a(href="/books/"+book.dataValues.id+"/deleting", class="btn btn-primary") Delete Book
        button(type="reset") Cancel

